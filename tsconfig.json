{
    "compilerOptions": {
        "target": "ES6",
        "module": "commonjs",
        "strict": true,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "noImplicitAny": true,
        "baseUrl": ".",
        "outDir": "./dist",
        "paths": {
            "@typings/*": ["src/domain/typings/*"],
            "@controllers/*": ["src/adapters/controllers/*"],
        }
    },
    "exclude": [
        "node_modules",
    ],
    "include": ["src"]
}
